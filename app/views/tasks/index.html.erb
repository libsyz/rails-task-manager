<h1>This is the index page</h1>
<h3> Test to see if it is all working just fine </h3>

<% @tasks.each do |task| %>

<p> <%= task.id %>, <%= task.name %>, <%= task.done %> </p>
<p> <%=  link_to "More Details", task_path(task) %> </p>
<p>  <%= link_to "Edit Task", edit_task_path(task) %></p>

<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

